<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="1dip" />
            <gradient
                android:startColor="#cccccc"
                android:endColor="#cccccc"
                android:angle="90" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="1dip" />
                <gradient
                    android:startColor="#167ac6"
                    android:endColor="#167ac6"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>